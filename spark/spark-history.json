{
  "id": "spark-history",
  "cpus": 1,
  "mem": 1024,
  "user": "root",
  "cmd": "SPARK_HISTORY_OPTS=\"-Dspark.history.ui.port=${PORT0} ${SPARK_HISTORY_OPTS}\" ./bin/spark-class org.apache.spark.deploy.history.HistoryServer",
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "mesosphere/spark:1.0.9-2.1.0-1-hadoop-2.6"
    }
  },
  "uris": [
    "http://api.hdfs.marathon.l4lb.thisdcos.directory/v1/endpoints/hdfs-site.xml",
    "http://api.hdfs.marathon.l4lb.thisdcos.directory/v1/endpoints/core-site.xml"
  ],
  "env": {
    "APPLICATION_WEB_PROXY_BASE": "/service/spark-history",
    "SPARK_HISTORY_OPTS": "-Dspark.history.fs.logDirectory=hdfs://hdfs/history -Dspark.history.fs.cleaner.enabled=false -Dspark.history.fs.cleaner.interval=1d -Dspark.history.fs.cleaner.maxAge=7d"
  },
  "labels": {
    "DCOS_PACKAGE_IS_FRAMEWORK": "false",
    "DCOS_PACKAGE_METADATA": "",
    "DCOS_PACKAGE_NAME": "spark-history",
    "DCOS_PACKAGE_REGISTRY_VERSION": "3.0",
    "DCOS_PACKAGE_RELEASE": "0",
    "DCOS_PACKAGE_SOURCE": "https://universe.mesosphere.com/repo",
    "DCOS_PACKAGE_VERSION": "2.1.0-1",
    "DCOS_SERVICE_NAME": "spark-history",
    "DCOS_SERVICE_PORT_INDEX": "0",
    "DCOS_SERVICE_SCHEME": "http",
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  },
  "upgradeStrategy": {
    "maximumOverCapacity": 0,
    "minimumHealthCapacity": 0
  },
  "portDefinitions": [
    {
      "protocol": "tcp",
      "port": 0,
      "labels": {
        "VIP_0": "spark-hdfs-history:18080"
      },
      "name": "history-server"
    }
  ],
  "healthChecks": [
    {
      "protocol": "MESOS_HTTP",
      "path": "/",
      "portIndex": 0,
      "gracePeriodSeconds": 30,
      "intervalSeconds": 20,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ]
}
